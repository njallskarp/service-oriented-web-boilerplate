{
  "name": "api",
  "version": "1.0.0",
  "description": "Express Web Server Boilerplate",
  "main": "index.js",
  "scripts": {
    "start:dev": "nodemon",
    "start:dev:native": "IS_NATIVE=Y nodemon",
    "start:prod": "NODE_ENV=production node build/api-server/app.js",
    "start:prod:native": "IS_NATIVE=Y NODE_ENV=production node build/api-server/app.js",
    "start:prod:dry": "DRY_RUN=Y NODE_ENV=production node build/api-server/app.js",
    "build": "tsc --project tsconfig.json && tsc-alias build/",
    "lint": "eslint ./src/** --ext .ts",
    "lint:fix": "eslint ./src/** --ext .ts --fix",
    "test:api": "mocha -r ts-node/register 'src/**/*.api.test.ts'",
    "test:api:watch": "mocha -r ts-node/register --watch 'src/**/*.api.test.ts'",
    "test:unit": "mocha -r ts-node/register 'src/**/*.unit.test.ts'",
    "test:unit:watch": "mocha -r ts-node/register --watch 'src/**/*.unit.test.ts'",
    "test": "npm run test:unit && npm run test:api"
  },
  "author": "Njall Skarphedinsson",
  "license": "ISC",
  "mocha": {
    "extensions": ["ts"],
    "watch-files": ["src/**/*.ts"],
    "spec": "src/**/*.test.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "chai": "^4.3.7",
    "chai-http": "^4.4.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "mocha": "^10.3.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "prisma": "^5.9.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "dotenv": "^16.4.4",
    "express": "^4.18.2",
    "express-list-routes": "^1.1.9",
    "tsc-alias": "^1.8.8"
  }
}
